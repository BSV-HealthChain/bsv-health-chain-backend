  "compilerOptions": {
    "target": "ES2021",
    "module": "nodenext",
    "outDir": "dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*", "scripts/**/*"]
}
